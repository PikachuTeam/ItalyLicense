<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tip_argomento_item_height"
    android:background="@color/white">


    <View
        android:id="@+id/view_line_left"
        android:layout_width="@dimen/line_height_3"
        android:layout_height="match_parent"
        android:background="@color/item_list_line_in_left_1" />

    <TextView
        android:id="@+id/textView_answer"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:text="@string/answer_true"
        android:textColor="@color/answer_true"
        android:layout_centerVertical="true"
        android:textSize="@dimen/text_size_5"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/tip_argomento_item_text_answer_margin" />


    <TextView
        android:id="@+id/textView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/textView_answer"
        android:layout_alignParentLeft="true"
        android:text="I catadiottri sono dispositivi che riflettono la luce e hanno la funzione di"
        android:layout_marginLeft="@dimen/quiz_per_argomento_item_no_image_text_margin"
        android:layout_marginTop="@dimen/quiz_per_argomento_item_text_margin"
        android:textSize="@dimen/text_size_3"
        android:maxLines="3"
        android:ellipsize="end" />

    <include
        layout="@layout/line_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/quiz_per_argomento_line_margin"
        android:layout_marginRight="@dimen/quiz_per_argomento_line_margin"
        android:layout_alignParentBottom="true"></include>

    <include layout="@layout/background_highlight" />
</RelativeLayout>