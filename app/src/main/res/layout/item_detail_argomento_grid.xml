<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/detail_argomento_item_grid_height"
    android:background="@color/red_main_1"
    android:padding="@dimen/detail_argomento_item_grid_padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="@dimen/detail_argomento_sub_item_grid_padding">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/detail_argomento_sub_item_grid_margin_top"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/image_traffic_signs"
                android:layout_width="@dimen/detail_argomento_item_grid_image_height"
                android:layout_height="@dimen/detail_argomento_item_grid_image_height"
                android:src="@drawable/test_image"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="text"
                android:maxLines="3"
                android:ellipsize="end"
                android:id="@+id/textView_name"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/detail_argomento_item_grid_text_margin"
                android:gravity="center"
                android:textSize="@dimen/text_size_4" />
        </LinearLayout>


    </RelativeLayout>

    <include layout="@layout/background_highlight"></include>
</RelativeLayout>